<UserControl x:Class="DacpacExplorer.SqlObjectDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
        <Grid Style="{StaticResource ContentRoot}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <mui:ModernTab SelectedSource="/Content/DisplayScript.xaml" Layout="Tab">
                <mui:ModernTab.Links>
                    <mui:Link DisplayName="Properties" Source="/Content/DisplayObject.xaml" />
                    <mui:Link DisplayName="Script" Source="/Content/DisplayScript.xaml" />
                </mui:ModernTab.Links>
            </mui:ModernTab>
        </Grid>
    

</UserControl>
